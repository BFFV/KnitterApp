<div>
    <% if (locals.errors) { %>
      <div class="errors">
        Ocurrieron los siguientes errores:
        <ul>
          <% errors.forEach(error => { %>
            <li><%= error.message %></li>
          <% }); %>
        </ul>
      </div>
    <% } %>
    <form action="<%= submitCategoryPath %>" method="POST">
      <% if (!category.isNewRecord) { %>
        <input type="hidden" name="_method" value="PATCH" />
      <% } %>
      <div id="panel">
      <div>
        <label for="name">Nombre:</label>
        <input type="text" name="name" size="40" value="<%= category.name %>" required/>
      </div>
      <div>
        <label for="description">Descripci√≥n:</label><br><br>
        <textarea rows="8" cols="100" type="text" required name="description"><%= category.description %></textarea>
      </div>
      <% if (category.isNewRecord) { %>
        <input type="submit" name="create" value="Crear" />
      <% } else { %>
        <input type="submit" name="update" value="Actualizar" />
      <% } %>
      </div>
    </form>
  </div>

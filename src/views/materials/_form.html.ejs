<div class="edit-material-form">
  <% if (locals.errors) { %>
    <div class="errors">
      <ul>
        <% errors.forEach(error => { %>
          <li><%= error.message %></li>
        <% }); %>
      </ul>
    </div>
  <% } %>
  <form action="<%= submitMaterialPath %>" method="POST">
    <% if (!material.isNewRecord) { %>
      <input type="hidden" name="_method" value="PATCH" />
    <% } %>
    <div class="panel">
      <label class="parag-list" for="name">Nombre:</label>
      <input class="input-list" type="text" name="name" size="40" value="<%= material.name %>" required/>
      <label class="parag-list" for="description">Descripci√≥n:</label>
      <textarea class="input-list" rows="8" cols="100" type="text" required name="description"><%= material.description %></textarea>
      <% if (material.isNewRecord) { %>
        <input class="create-button" type="submit" name="create" value="Crear" />
      <% } else { %>
        <input class="update-button" type="submit" name="update" value="Actualizar" />
      <% } %>
      <form action="<%- materialsPath %>">
        <input class="back-button" type="submit" value="Volver" />
      </form>
      </div>
    </div>
  </form>
</div>

<div>
    <% if (locals.errors) { %>
      <div class="errors">
        Ocurrieron los siguientes errores:
        <ul>
          <% errors.forEach(error => { %>
            <li><%= error.message %></li>
          <% }); %>
        </ul>
      </div>
    <% } %>
    <form action="<%= submitUserPath %>" method="POST">
      <% if (!user.isNewRecord) { %>
        <input type="hidden" name="_method" value="PATCH" />
      <% } %>
      <div id="panel">
      <div>
        <label for="username">Nombre de Usuario:</label>
        <input type="text" name="username" size="40" value="<%= user.username %>" required/>
      </div>
      <div>
        <label for="email">Correo:</label>
        <input type="text" name="email" size="40" value="<%= user.email %>" required/>
      </div>
      <div>
        <label for="password">Contrase√±a:</label>
        <input type="password" name="password" size="40" value="<%= user.password %>" required/>
      </div>
      <div>
        <label for="age">Edad:</label>
        <input type="number" name="age" min="0" max="150" step="1" value="<%= user.age %>" required/>
      </div>
      <div>
        <label for="age">Foto:</label>
        <input type="text" name="photo" size="40" value="<%= user.photo %>" required/>
      </div>
      <div>
        <input type="hidden" name="role" value="common" />
      </div>
      <% if (user.isNewRecord) { %>
        <input type="submit" name="create" value="Crear" />
      <% } else { %>
        <input type="submit" name="update" value="Actualizar" />
      <% } %>
      </div>
    </form>
  </div>

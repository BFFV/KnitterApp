<div>
  <% if (locals.errors) { %>
    <div class="errors">
      Ocurrieron los siguientes errores:
      <ul>
        <% errors.forEach(error => { %>
          <li><%= error.message %></li>
        <% }); %>
      </ul>
    </div>
  <% } %>
  <form action="<%= submitCommentPath %>" method="POST">
    <% if (!comment.isNewRecord) { %>
      <input type="hidden" name="_method" value="PATCH" />
    <% } %>
    <div id="panel">
      <div>
        <% if (comment.isNewRecord) { %>
          <div>
            <textarea rows="8" cols="80" type="text" required name="content"></textarea>
            <input  type="hidden" name="userId" value="<%= currentUser.id %>">
            <input type="hidden" id="patternId" name="patternId" value="<%= pattern.id %>">
          </div>
        <% } else { %>
          <div>
            <textarea rows="8" cols="80" type="text" required name="content"><%= comment.content %></textarea>
          </div>
        <% } %>
      </div>
    </div>
    <div id="hcontainer">
    <% if (comment.isNewRecord) { %>
      <input type="submit" name="create" value="Comentar" />
    <% } else { %>
      <input type="submit" name="update" value="Actualizar" />
    <% } %>
    </div>
  </form>
</div>

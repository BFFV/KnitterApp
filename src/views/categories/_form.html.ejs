<div class="form">
  <% if (locals.errors) { %>
    <div class="errors">
      Ocurrieron los siguientes errores:
      <ul>
        <% errors.forEach(error => { %>
          <li><%= error.message %></li>
        <% }); %>
      </ul>
    </div>
  <% } %>
  <form action="<%= submitCategoryPath %>" method="POST">
    <% if (!category.isNewRecord) { %>
      <input type="hidden" name="_method" value="PATCH" />
    <% } %>
    <div id="panel">
      <div class="panel-content">
        <label class="user-parag-list" for="name">Nombre:</label>
      </div>
      <div class="panel-content">
        <input type="text" name="name" size="40" value="<%= category.name %>" required/>
      </div>
      <div class="panel-content">
        <label class="user-parag-list" for="description">Descripci√≥n:</label>
      </div>
      <div class="panel-content">
        <textarea rows="8" cols="100" type="text" required name="description"><%= category.description %></textarea>      </div>
      <div class="button_space">
        <% if (category.isNewRecord) { %>
          <input  id="boton" type="submit" name="create" value="Crear" />
        <% } else { %>
          <input  id="boton" type="submit" name="update" value="Actualizar" />
        <% } %>

      </div>
    </div>
  </form>
</div>


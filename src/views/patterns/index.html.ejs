<h1>Patrones</h1>
<div id="button">
    <form action="<%- newPatternPath %>">
        <input type="submit" value="Crear Patrón de Dibujo" />
    </form>
</div>
<div id="panel">
<h2>Lista de Patrones</h2>
<% if (!patternsList.length) { %>
  <p>No hay patrones!</p>
<% } else { %>
  <table>
    <thead>
        <tr>
          <th>Nombre</th>
          <th>Puntaje</th>
          <th colspan="2">Acciones</th>
        </tr>
    </thead>
    <tbody>
      <% patternsList.forEach((pattern) => { %>
        <tr>
          <td><a href="<%- patternPath(pattern) %>"><%- pattern.name %></a></td>
          <td><%- pattern.score %>/5</td>
          <td>
            <form action="<%- editPatternPath(pattern) %>">
              <input type="submit" value="Editar" />
            </form>
          </td>
          <td>
            <form action="<%- deletePatternPath(pattern) %>" onclick="return confirm('Estás seguro?');" method="POST">
              <input type="hidden" name="_method" value="delete" />
              <input type="submit" value="Eliminar" />
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } %>
</div>

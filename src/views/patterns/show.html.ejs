<div class="contenedor-body-show">
  <div class="material-show-head">
    <div class="material-show-element">
      <h1><%- pattern.name %></h1>
    </div>
    <% if ((currentUser) && ((currentUser.id === pattern.authorId) || (currentUser.role === 'admin'))) { %>
      <div class="material-show-element">
        <form action="<%- editPatternPath %>">
          <input class="material-add-button" type="submit" value="E" />
        </form>
      </div>
      <div class="material-show-element">
        <form action="<%- deletePatternPath %>" onclick="return confirm('Estás seguro?');"
          method="POST">
          <input type="hidden" name="_method" value="delete" />
          <input class="material-add-button" type="submit" value="-" />
        </form>
      </div>
    <% } %>
  </div>
  <div class="show-pattern-body">
    <div class="content-body-header">
      <div class="picture-show">
        <h4> </h4>
      </div>
      <div class="center-header">
        <div class="center-header-content">
          <div>
            <p class="parag">Diseñado por: <a class= "parag" href="<%- authorPath %>"><%- author.username %></a></p>
          </div>
          <div>
            <p class="parag">Categoría: <%- category.name %></p>
          </div>
          <div>
            <p class="parag">Tensión: <%- pattern.tension %></p>
          </div>
          <div>
            <p class="parag">Puntaje: <%- pattern.score %>/5</p>
          </div>
          <div >
            <p class="parag">Materiales:</p>
          </div>
          <div>
            <% materials.forEach(material => { %>
              <p class="parag-list">- <%- material.name %><br>
            <% }); %>
          </div>
          <% if (currentUser) { %>
            <div>
              <%- include('../vote_patterns/_form') %>
              <br>
              <%- include('_formAdd') %>
            </div>
          <% } %>
        </div>
      </div>
      <div class="youtube-video">
        <iframe class="youtube" allowFullScreen="allowFullScreen" src="https://www.youtube.com/embed/<%= pattern.video.slice(32) %>?ecver=1&amp;iv_load_policy=1
            &amp;rel=0&amp;yt:stretch=16:9&amp;autohide=1&amp;color=red"
        width="80%" height="160%" allowtransparency="true" frameborder="0">
        </iframe>
      </div>
    </div>
  </div>
  <div class="middle-show">
    <div class="instruction-content">
      <h2>Instrucciones:</h2>
      <p><%- pattern.instructions %></p>
    </div>
    <div class="comment-form">
      <h2><%= patternComments.length %> Comentarios</h2>
      <% if (currentUser) { %>
        <%- include('../comments/_form') %>
      <% } %>
    </div>
  </div>
  <div  class="bottom-show">
    <div class="comments-all">
      <% patternComments.forEach(comment => { %>
        <div class="comment">
          <div class="comment-item">
            <p class="comment-text"><%- comment[0].content %></p>
            <p class="parag"> <%- comment[2] %> por <%- comment[1].username %> </p>
          </div>
          <% if ((currentUser) && ((currentUser.id === comment[1].id) || (currentUser.role === 'admin'))) { %>
          <div class="comment-item">
            <form action="<%- editCommentPath(comment[0]) %>">
              <input type="submit" value="Editar" />
            </form>
          </div>
          <div class="comment-item">
            <form action="<%- deleteCommentPath(comment[0]) %>" onclick="return confirm('Estás seguro?');" method="POST">
              <input type="hidden" name="_method" value="delete" />
              <input type="submit" value="Eliminar" />
            </form>
          </div>
          <% } %>
        </div>
      <% }); %>
    </div>
  </div>
  <div>
    <form action="<%- patternsPath %>">
        <input type="submit" value="Volver" />
    </form>
  </div>
</div>

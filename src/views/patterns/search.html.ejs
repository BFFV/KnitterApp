<div class="form-search">
  <form action="<%- patternsPath %>", method="GET">
    <div class="search-container">
      <div class="search-element">
        <div class="search-element-content">
          <div class="search-subelement">
            <label class="parag-list" for="name">Nombre:</label>
            <input type="text" name="name" />
          </div>
          <div class="search-subelement">
            <label class="parag-list" for="category">Categor√≠a:</label>
            <select class="box-select" name="category">
              <% if (selCategory === 'all') { %>
                <option value="all" selected>Todas</option>
              <% } else { %>
                <option value="all">Todas</option>
              <% } %>
              <% categories.forEach(category => { %>
                <% if (selCategory === category.id) { %>
                  <option value="<%- category.id %>" selected><%- category.name %></option>
                <% } else { %>
                  <option value="<%- category.id %>"><%- category.name %></option>
                <% } %>
              <% }); %>
            </select>
          </div>
          <div class="search-subelement">
            <label class="parag-list" for="sorting">Ordenar por:</label>
            <select class="box-select" name="sorting">
              <% options.forEach(option => { %>
                <% if (selSorting === option[0]) { %>
                  <option value="<%- option[0] %>" selected><%- option[1] %></option>
                <% } else { %>
                  <option value="<%- option[0] %>"><%- option[1] %></option>
                <% } %>
              <% }); %>
            </select>
          </div>
        </div>

      </div>
      <div class="search-element">
        <div class="material-search">
          <label class="parag-list" id="materials-title" for="materials">Materiales:</label>
        </div>
        <div class="material-checkbox-search" id="checkbox-pattern">
          <% materials.forEach(material => { %>
            <div class="material-check-box-content">
              <div class="material-checkbox">
                <p class="parag-list" id="materials-text"> <%- material.name %> </p>
              </div>
              <div class="material-checkbox">
                <input class="checkbox" type="checkbox" name="materials" value="<%- material.id %>">
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    </div>
    <input id="boton" type="submit" value="Buscar" />
  </form>
</div>
